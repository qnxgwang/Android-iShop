<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GoodsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Max_View"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="110dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="可选颜色"></TextView>
            <ImageView
                android:id="@+id/color1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                ></ImageView>
            <ImageView
                android:id="@+id/color2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                ></ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/goods_Price"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="￥price"
            android:textColor="@android:color/holo_red_dark"></TextView>

        <TextView
            android:id="@+id/detailMsg"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="商品名称"
            android:textColor="@android:color/holo_red_dark"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="尺码"></TextView>
            <Button
                android:text="M"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </Button>
            <Button
                android:text="L"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </Button>
            <Button
                android:text="XL"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </Button>
            <Button
                android:text="XXL"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="商铺名称"
                android:textColor="@android:color/holo_red_dark"></TextView>

            <TextView
                android:id="@+id/shop_Name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="0dp"
                android:gravity="center_vertical"
                android:text="name"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="商铺地址"
                android:textColor="@android:color/holo_red_dark"></TextView>

            <TextView
                android:id="@+id/shop_Adress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="0dp"
                android:gravity="center_vertical"
                android:text="address"></TextView>
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/ishop_gooo"></ImageView>
    </LinearLayout>

    <ImageView
        android:id="@+id/returnButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ishop_return" />

    <ImageView
        android:id="@+id/numImage"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="250dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/ishop_num" />

</FrameLayout>